<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" name="viewport" content="width=device-width, initial-scale=1">
        <title>Unit Converter</title>
        <script src="/static/js/jquery-3.3.1.min.js"></script>
        <script src="/static/js/bootstrap.min.js"></script>
        <script src="/static/js/conversion.js"></script>
        <link rel="stylesheet" href="/static/css/bootstrap.min.css"/>
        <link rel="stylesheet" href="/static/css/conversion.css"/>
        <script>

        </script>
        <!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css"> -->
    </head>
    <body>


        <div class="container">
            <div class="row">
                <div class="col-lg-6 vcentered">
                    <h1>Convert Units!</h1>
                </div>
                <div class="col-lg-2 vcentered">
                    <h4><a href="/api/1.0">API Docs</a></h4>
                </div>
            </div>



            <div class="row">
                <div class="col-lg-12">
                    <form action="/convert" oninput="x.value=parseInt(a.value)+parseInt(b.value)" method="POST">

                        <div class="btn-group">
                            {% for unit_type in unit_types %}
                            <button type="button" class="btn btn-primary" data-toggle="button" value="{{ unit_type }}">{{ unit_type.capitalize() }}</button>
                            {% endfor %}
                        </div>

                        <div class="form-group">
                            <label for="given_value">Given Value</label>
                            <input type="number" class="form-control" id="given_value" name="given_num" placeholder="Number you wish to convert" required>
                        </div>


                        <div class="form-group">
                            <label for="given_prefix">Given Prefixes:</label>
                            <select class="form-control" id="given_prefix" name="given_prefix" required>
                                <option value="" selected disabled>Select a prefix</option>
                                {% for prefix in prefix_types %}
                                <option value="{{ prefix }}">{{ prefix }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="given_unit">Given Units</label>
                            <select class="form-control" id="given_unit" name="given_unit" required>
                                <option value="" selected disabled>Select a unit</option>
                                <option>m</option>
                                <option>mi</option>
                                <option>in</option>
                                <option>ft</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="desired_prefix">Given Prefixes</label>
                            <select class="form-control" id="desired_prefix" name="desired_prefix" required>
                                <option value="" selected disabled>Select a prefix</option>
                                {% for prefix in prefix_types %}
                                <option value="{{ prefix }}">{{ prefix }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="desired_unit">Desired Units</label>
                            <select class="form-control" id="desired_unit" name="desired_unit" required>
                                <option value="" selected disabled>Select a Unit</option>
                                <option>m</option>
                                <option>mi</option>
                                <option>in</option>
                                <option>ft</option>
                            </select>
                        </div>


                        <div>
                            <button type="submit">Convert!</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </body>
</html>